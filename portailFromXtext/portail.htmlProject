        <elements xsi:type="htmlProject:Lien" name="Que va-t-on voir dans cette UE" adresse="http://www.fil.univ-lille1.fr/~tarby/portailFIL/ue-M1S1-TAC/documents/2021-2022/cours/1.contenu_UE.pdf" couleur="default"/>
