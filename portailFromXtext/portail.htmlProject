        <elements xsi:type="htmlProject:Paragraphe" name="Cedric Dumoulin : cedric.dumoulin@univ-lille.fr"/>
        <elements xsi:type="htmlProject:Paragraphe" name="Jean-Claude Tarby : jean-claude.Tarby@univ-lille.fr"/>
      </descriptions>
      <descriptions name="Séances" contenu="Voici les différentes séances organisées durant le semestre pour cette UE :">
        <elements xsi:type="htmlProject:Paragraphe" name="Cours magistral : cours 1, le 11/09/2021 de 8H30 à 9h30"/>
